# Codorch Configuration Template
# Copy this file to .env.dev, .env.test, or .env.production and adjust values

# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://usr_codorch:lebaro13@localhost:5432/codorch
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Provider (OpenAI-compatible)
OPENAI_BASE_URL=http://localhost:3000/v1
OPENAI_API_KEY=your_api_key_here
DEFAULT_MODEL=gemini-2.5-flash
ADVANCED_MODEL=gemini-2.5-pro

# AI Configuration
AI_MAX_RETRIES=3
AI_TIMEOUT=60
AI_RATE_LIMIT=100

# Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:9000,http://localhost:3000

# Application
DEBUG=true
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# RefMemTree
REFMEMTREE_STORAGE_PATH=./data/refmemtree
REFMEMTREE_CACHE_SIZE=1000

# Vector Database (for semantic search)
VECTOR_DB_TYPE=pgvector
VECTOR_DB_DIMENSIONS=1536

# Prefect
PREFECT_API_URL=http://localhost:4200/api
